@using Microsoft.AspNetCore.Mvc.Localization
@using WebSite.Areas.Admin.Controllers

@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="en-us">

<head>
    <title>Project Dashboard</title>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <link rel="shortcut icon" type="image/x-icon" href="~/assets/favicon.ico" />

    <link href="https://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700italic,700,900,900italic" rel="stylesheet">

    <!-- STYLESHEETS -->
    <style type="text/css">
        [fuse-cloak],
        .fuse-cloak {
            display: none !important;
        }
    </style>

    <!-- Icons.css -->
    <link type="text/css" rel="stylesheet" href="~/assets/icons/fuse-icon-font/style.css">
    <!-- Animate.css -->
    <link type="text/css" rel="stylesheet" href="~/assets/modules/animate.css/animate.min.css">
    <!-- PNotify -->
    <link type="text/css" rel="stylesheet" href="~/assets/modules/pnotify/dist/PNotifyBrightTheme.css">
    <!-- Nvd3 - D3 Charts -->
    <link type="text/css" rel="stylesheet" href="~/assets/modules/nvd3/build/nv.d3.min.css" />
    <!-- Perfect Scrollbar -->
    <link type="text/css" rel="stylesheet" href="~/assets/modules/perfect-scrollbar/css/perfect-scrollbar.css" />
    <!-- Fuse Html -->
    <link type="text/css" rel="stylesheet" href="~/assets/fuse-html/fuse-html.min.css" />
    <!-- Main CSS -->
    <link type="text/css" rel="stylesheet" href="~/assets/css/main.css">
    <!-- / STYLESHEETS -->
    <!-- JAVASCRIPT -->
    <!-- jQuery -->
    <script type="text/javascript" src="~/assets/modules/jquery/dist/jquery.min.js"></script>
    <!-- Mobile Detect -->
    <script type="text/javascript" src="~/assets/modules/mobile-detect/mobile-detect.min.js"></script>
    <!-- Perfect Scrollbar -->
    <script type="text/javascript" src="~/assets/modules/perfect-scrollbar/dist/perfect-scrollbar.min.js"></script>
    <!-- Popper.js -->
    <script type="text/javascript" src="~/assets/modules/popper.js/dist/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <script type="text/javascript" src="~/assets/modules/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- Nvd3 - D3 Charts -->
    <script type="text/javascript" src="~/assets/modules/d3/d3.min.js"></script>
    <script type="text/javascript" src="~/assets/modules/nvd3/build/nv.d3.min.js"></script>
    <!-- Data tables -->
    <script type="text/javascript" src="~/assets/modules/datatables.net/js/jquery.dataTables.js"></script>
    <script type="text/javascript" src="~/assets/modules/datatables-responsive/js/dataTables.responsive.js"></script>
    <!-- PNotify -->
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotify.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyStyleMaterial.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyButtons.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyCallbacks.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyMobile.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyHistory.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyDesktop.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyConfirm.js"></script>
    <script type="text/javascript" src="~/assets/modules/pnotify/dist/iife/PNotifyReference.js"></script>

    <!-- CKEditor -->
    <script src="~/js/ckeditor/ckeditor.js"></script>
    <!-- Fuse Html -->
    <script type="text/javascript" src="~/assets/fuse-html/fuse-html.min.js"></script>
    <!-- Main JS -->
    <script type="text/javascript" src="~/assets/js/main.js"></script>
    <!-- / JAVASCRIPT -->
</head>

<body class="layout layout-vertical layout-left-navigation">
    <main>
        <div id="wrapper">
            @await Component.InvokeAsync("AdminSideMenu")
            <div class="content-wrapper">
                @await Component.InvokeAsync("AdminMenu")


                @if (TempData[BaseAdminController.Constants.NotificationsSuccess] != null)
                {
                    <script>
                    PNotify.success({
                        title: 'Успешно!',
                        text: '@Html.Raw(TempData[BaseAdminController.Constants.NotificationsSuccess].ToString())'
                    });
                    </script>
                }
                @if (TempData[BaseAdminController.Constants.NotificationsError] != null)
                {
                    <script>
                    PNotify.error({
                        title: 'Ошибка!',
                        text: '@Html.Raw(TempData[BaseAdminController.Constants.NotificationsError].ToString())'
                    });
                    </script>
                }

                <div class="content custom-scrollbar">
                    @RenderBody()
                </div>

                <nav id="footer" class="bg-dark text-auto row no-gutters align-items-center px-6">

                </nav>

            </div>

        </div>
        @*<footer class="border-top footer text-muted">
                <div class="row">
                    <div class="col-md-6">
                        <p>&copy; @System.DateTime.Now.Year</p>
                    </div>
                    <div class="col-md-6 text-right">
                        @await Html.PartialAsync("_SelectLanguagePartial")
                    </div>
                </div>
            </footer>*@
    </main>
    @RenderSection("Scripts", required: false)
</body>

</html>