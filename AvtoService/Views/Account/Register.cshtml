@model WebSite.Models.Account.UserRegistrationViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="htc__login__register bg__white ptb--130">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <ul class="login__register__menu" role="tablist">
                    <li role="presentation" class="register active"><a href="#login" role="tab" data-toggle="tab">Register</a></li>

                </ul>
            </div>
        </div>
        <!-- Start Login Register Content -->
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="htc__login__register__wrap">
                    <!-- Start Single Content -->
                    <div id="login" role="tabpanel" class="single__tabs__panel tab-pane fade in active">
                        <form class="login" asp-action="Register" asp-controller="Account" method="post">
                            <input type="text" asp-for="Name" placeholder="Name*" />
                            <input style="margin-top: 14px !important;" type="email" asp-for="Email" placeholder="Email*">
                            <input style="margin-top: 14px !important;" type="tel" asp-for="PhoneNumber" placeholder="Номер телефона*">
                            <input style="margin-top: 14px !important;" type="password" asp-for="Password" placeholder="Пароль*">
                            <input style="margin-top: 14px !important;" type="password" asp-for="ConfirmPassword" placeholder="Подтвердите пароль*">

                            <div class="tabs__checkbox">
                                <input type="checkbox">
                                <span> Remember me</span>
                                <span class="forget"><a href="#">Forget Pasword?</a></span>
                            </div>
                            <div class="htc__login__btn mt--30">
                                <button type="submit" style="
                                    border: 1px solid #d5d5d5;
                                    display: inline-block;
                                    font-size: 20px;
                                    height: 50px;
                                    line-height: 50px;
                                    text-align: center;
                                    text-transform: capitalize;
                                    transition: all 0.5s ease 0s;
                                    width: 292px;
                                    color: #4b4b4b;
                                    text-transform: uppercase;">
                                    Зарегистрироваться
                                </button>
                            </div>

                        </form>
                        <div class="htc__social__connect">
                            <h2>Or Login With</h2>
                            <ul class="htc__soaial__list">
                                <li><a class="bg--twitter" href="#"><i class="zmdi zmdi-twitter"></i></a></li>

                                <li><a class="bg--instagram" href="#"><i class="zmdi zmdi-instagram"></i></a></li>

                                <li><a class="bg--facebook" href="#"><i class="zmdi zmdi-facebook"></i></a></li>

                                <li><a class="bg--googleplus" href="#"><i class="zmdi zmdi-google-plus"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <!-- End Single Content -->

                </div>
            </div>
        </div>
        <!-- End Login Register Content -->
    </div>
</div>

