
@foreach (var menu in Model)
{
    <li class="dropdown">
        <a asp-controller="Page"
           asp-action="Index"
           class="dropdown-toggle" data-toggle="dropdown">@menu.Name<b class="caret"></b></a>
        <ul class="dropdown-menu">
            @foreach (var item in menu.Items)
            {
                <li>
                    <a asp-controller="@item.Controller" asp-action="@item.Action"
                       asp-route-stringKey="@item.StringKey" asp-route-customUrl="@item.CustomUrl">@item.Name</a>
                </li>
            }
        </ul>
    </li>
}
